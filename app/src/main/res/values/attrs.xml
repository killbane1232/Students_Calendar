<?xml version="1.0" encoding="utf-8"?>

<resources>
    <!-- declare noteIcon attribute -->
    <attr name="noteIcon" format="reference"/>

    <!-- declare menuIcon attribute -->
    <attr name="menuIcon" format="reference"/>

    <!-- declare calendarIcon attribute -->
    <attr name="calendarIcon" format="reference"/>
    <attr name="buttonShape" format="color"/>
    <attr name="buttonColor" format="color"/>

    <!-- declare our custom widget to be styleable by these attributes -->
    <declare-styleable name="com.example.students_calendar">
        <attr name="calendarIcon" />
        <attr name="noteIcon" />
        <attr name="menuIcon" />
        <attr name="buttonShape" />
        <attr name="buttonColor" />
    </declare-styleable>
</resources>